        <CheckBox xmlns="sap.m" text="Committed" selected="false"/>
        <CheckBox xmlns:core="sap.ui.core" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns="sap.m" text="Place of Safety" selected="false" wrapping="true"/>
        <CheckBox xmlns:core="sap.ui.core" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns="sap.m" text="Specialized Service" selected="false" wrapping="true"/>
